<h1>Listing personas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Email</th>
      <th>Nacimiento</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody >
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.edad %></td>
        <td><%= persona.email %></td>
        <td><%= persona.nacimiento %></td>
        <td class="label label-default"><%= link_to 'Show', persona %></td>
        <td class="label label-warning"><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td class="label label-danger"><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

